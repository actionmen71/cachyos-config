{
  "niri/workspaces": {
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {
        "1": "",
		    "2": "",
		    "3": "",
		    "4": "",
		    "5": "",
		    "6": "",
		    "active": "",
		    "default": "" 
      }
  },

  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 20,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-right": "close",
    "ignore-list": ["Alacritty", "kitty", "ghostty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },

  "niri/window": {
    "format": "{app_id}",
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true,
    "swap-icon-label": false
  },


    

  
  "custom/updates": {
      "format": "{}",
      "return-type": "json",
      "interval": 3600,
      "signal": 1,
      "min-length":8,
      "max-length":8,
      "exec": "~/.config/waybar/scripts/system-update.sh module",
      "on-click": "alacritty -e ~/.config/waybar/scripts/system-update.sh",
      "on-click-right": "pkill -RTMIN+1 waybar"
  },
   


  "custom/exit": {
    "format": " 󰐥 ",
    "on-click": "~/.config/waybar/scripts/power-menu.sh",
    "tooltip":false,
    "min-length": 5,
    "max-length": 5
  },

  "tray": {
    "icon-size": 16,
    "spacing": 14,
    "show-passive-items":true,
    "cursor":true,
    "reverse-direction":true,
    "min-length": 8

  },

   "clock#date":{
      "format": "󰸗 {:%m-%d}",
      "min-length": 8,
      "max-length": 8,
      "tooltip-format": "{calendar}",
      "calendar": {
          "mode": "month",
          "mode-mon-col": 6,
          "format": {
              "months": "<span alpha='100%'><b>{}</b></span>",
              "days": "<span alpha='90%'>{}</span>",
 
              "weekdays": "<span alpha='80%'><i>{}</i></span>",
              "today": "<span alpha='100%'><b><u>{}</u></b></span>"
          }
      },
      "actions":{
      "on-click":"mode"
      }
    },

   "clock#time":{
    "interval":1,
      "format": "{:%H:%M}",
      "min-length":8,
      "max-length":8,
      "tooltip-format": "{:%I:%M:%S %p}"
    },

  "battery": {
    "interval":10,
    "states": {
      "warning": 30,
      "critical": 10
    },
    "format": "{icon} {capacity}%",
    "format-time": "{H} hr {M} min",
    "format-charging": "󰉁 {capacity}%",
    "format-plugged": "  {capacity}%",
    "format-full": "  {capacity}%",
    "format-alt": "{icon}  {time}",
 
    "format-icons": [" ", " ", " ", " ", " "],
    "min-length": 8,
    "max-length": 8,
   
    "tooltip-format": "<b>Time left</b>: {time}\n<b>health</b>:{health}",
    "tooltip-format-plugged":"<b>Plugged in (Not charging)",
    "tooltip-format-charging":"<b>Power</b>:{power}<b>\nCycles</b>:{cycles}<b>
Time</b>:{time}\n<b>health</b>:{health}" ,
    "events": {
      "on-discharging-warning": "notify-send 'Battery Low (20%)' -u critical -i 'battery-020'",
      "on-discharging-critical": "notify-send 'Battery Critical (10%)' -u critical -i 'battery-010'",
      "on-charging-100": "notify-send 'Battery Full (100%)' -i 'battery-100-charged'"
      }
  },

  "pulseaudio": {
 
    "format": "{icon}  {volume}%",
    "format-muted": "{icon} {volume}%",
    "format-icons": {
          "default": [ "󰕿", "󰖀", "󰕾" ],
          "default-muted": "󰝟",
          "headphone": "󰋋",
          "headphone-muted": "󰟎",
          "headset": "󰋎",
          "headset-muted": "󰋐"
      },

    "on-click": "pavucontrol",
    "tooltip-format": "<b>Output Device</b>: {desc}",
    "min-length":10,
    "max-length":10
  },

  "bluetooth": {
    "format": "󰂯",
    "format-disabled": "󰂲",
    "format-off": "󰂲",
    "format-on": "󰂰",
    "format-connected": "󰂱",
    "on-click": "alacritty -e ~/.config/waybar/scripts/bluetooth.sh",
    "on-click-right": "bluetoothctl power off && notify-send 'Bluetooth Off' -i
'network-bluetooth-inactive' -r 1925",
    "tooltip-format": "Device Addr: {device_address}",
    "tooltip-format-disabled": "Bluetooth Disabled",
    "tooltip-format-off": "Bluetooth Off",
    "tooltip-format-on": "Bluetooth Disconnected",
    "tooltip-format-connected": "Device: {device_alias}",
    "tooltip-format-enumerate-connected": "Device: {device_alias}",
    "tooltip-format-connected-battery": "Device: {device_alias}\nBattery: {device_battery_percentage}%",
    "tooltip-format-enumerate-connected-battery": "Device: {device_alias}\nBattery: {device_battery_percentage}%",
    "min-length": 6,
     "max-length": 6,
  },
 
  "user": {
      "format": "<b></b>    {work_H}:{work_M}",
      "interval": 60,
      "min-length":12,
      "icon": true,
      "open-on-click":true,
  },

  "backlight": {
    "format": "{icon}  {percent}%",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "min-length": 8,
    "max-length": 8,
    "scroll-step": 1,
    "tooltip": false
  },


"custom/cpu": {
   "format": "{}",
    // "exec": "~/.config/waybar/scripts/cpu-usage.sh module",
    "exec": "~/.config/waybar/scripts/cpu-usage.sh module",
    "interval": 5,
    "min-length": 8,
    "max-length": 8,
    "return-type": "json",
    "tooltip": false,
    "signal": 1,
    "on-click-right": "pkill -RTMIN+1 waybar"
},
 
  "memory":{
    "interval":30,
    "format": "󰘚  {percentage}%",
    "format-warning": "󰀧 {percentage}%",
    "format-critical": "󰀧 {percentage}%",
    "states":{
      "warning":75,
      "critical":90
      },
    "min-length":8,
    "max-length":8,
    "tooltip-format": "Memory Used: {used:0.1f} GB / {total:0.1f} GB"


  },
 
  "network":{
    "interval":3,
    "format-wifi":  "   {bandwidthTotalBits}",
    "format": "󰤨",
    "format-disconnected": "󰤯",
    "format-disabled": "󰤮",
    "format-icons": [
        "󰤟", "󰤢", "󰤥", "󰤨"
      ],
    "min-length":12,
    "max-length":12,
    "on-click": "alacritty -e ~/.config/waybar/scripts/network.sh",
    "on-click-right": "nmcli radio wifi off && notify-send 'Wi-Fi Disabled' -i
'network-wireless-off' -r 1125",
    "tooltip-format": "<b>Gateway</b>: {gwaddr}",
    "tooltip-format-wifi": "<b>Network</b>: {essid}\n<b>IP Addr</b>:
{ipaddr}/{cidr}\n<b>Strength</b>: {signalStrength}%\n<b>Frequency</b>:
{frequency} GHz",
    "tooltip-format-disconnected": "Wi-Fi Disconnected",
    "tooltip-format-disabled": "Wi-Fi Disabled"
  },

  "temperature":{
    "thermal-zone": 9,
    "critical-threshold":90,
    "warning-threshold":70,
    "interval": 10,
    "format-critical": "󰀦 {temperatureC}°C",
    "format": "{icon} {temperatureC}°C",
    "format-icons": [
          "󱃃", "󰔏", "󱃂"
      ],
    "min-length":8,
    "max-length":8,
    "tooltip":false


    },

  "idle_inhibitor":{
    "format": "{icon}",
    "format-icons": {
        "activated": "󰈈",
        "deactivated": "󰈉"
      },
    "min-length": 5,
    "max-length": 5,
    "tooltip-format-activated": "<b>Idle Inhibitor</b>: <span
text_transform='capitalize'>{status}</span>",
    "tooltip-format-deactivated": "<b>Idle Inhibitor</b>: <span
text_transform='capitalize'>{status}</span>",
    "start-activated": false
  },


 
  "disk": {
	"interval": 100,
	"format": "󰨣  {percentage_used}",
	"tooltip-format": "{specific_free:0.2f} GB / {specific_total:0.2f} GB",
	"unit": "GB",
	"min-length": 7,
    "max-length": 7,
},

"power-profiles-daemon": {
  "format": "{icon}",
  "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
  "tooltip": true,
  "min-length": 3,
    "max-length": 3,
  "format-icons": {
    "default": "",
    "performance": "",
    "balanced": "",
    "power-saver": ""
  }
}

}
